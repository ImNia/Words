<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

        <data>
                <variable
                        name="wordVariable"
                        type="com.delirium.words.model.Word"/>
                <variable
                        name="clickListener"
                        type="com.delirium.words.list.WordListener" />
        </data>

<androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/fragment_container"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:onClick="@{() -> clickListener.onClick(wordVariable)}"
>
        <TextView
                android:layout_width="123dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@{wordVariable.origin}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Reduce"
                android:layout_marginStart="80dp"
                app:layout_constraintVertical_bias="0.0" android:id="@+id/textView2"
                app:layout_constraintEnd_toStartOf="@+id/textView3" android:layout_marginEnd="50dp"
                android:layout_marginBottom="8dp" android:layout_marginTop="8dp" android:textColor="@color/purple_500"/>
        <TextView
                android:layout_width="142dp"
                android:layout_height="52dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@{wordVariable.translate}"
                tools:text="снижать"
                android:layout_marginEnd="80dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="20dp"
                app:layout_constraintStart_toEndOf="@+id/textView2" android:id="@+id/textView3"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"
                android:textColor="@color/purple_500"/>
</androidx.constraintlayout.widget.ConstraintLayout >
</layout>